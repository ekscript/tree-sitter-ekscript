{
  "name": "tree-sitter-ekscript",
  "version": "0.0.1",
  "description": "EkScript grammar for tree-sitter",
  "main": "grammar.js",
  "scripts": {
    "build": "tree-sitter generate",
    "test": "npm run test-ekscript  && node script/parse-examples.js",
    "test-ekscript": "tree-sitter test",
    "start": "nodemon --watch grammar.js --watch corpus/**/*.txt -e js,txt --exec \"npm run build && npm run test\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ekscript/tree-sitter-ekscript"
  },
  "keywords": [
    "ekscript",
    "tree-sitter",
    "parser",
    "grammar",
    "highlight"
  ],
  "author": "Himujjal",
  "license": "MIT",
  "dependencies": {
    "nan": "^2.14.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.7",
    "tree-sitter-cli": "^0.18.0"
  }
}
